<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/tutor_bg_primary">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Availability"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/tutor_text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/tutor_text_secondary"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonPickDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textAllCaps="false"
        android:backgroundTint="@color/tutor_card_bg"
        android:textColor="@color/tutor_text_primary"
        app:layout_constraintTop_toBottomOf="@+id/dateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/startLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textColor="@color/tutor_text_secondary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPickDate"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonPickStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Start"
        android:textAllCaps="false"
        android:backgroundTint="@color/tutor_card_bg"
        android:textColor="@color/tutor_text_primary"
        app:layout_constraintTop_toBottomOf="@+id/startLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/endLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End time"
        android:textColor="@color/tutor_text_secondary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPickStart"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonPickEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select end"
        android:textAllCaps="false"
        android:backgroundTint="@color/tutor_card_bg"
        android:textColor="@color/tutor_text_primary"
        app:layout_constraintTop_toBottomOf="@+id/endLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/errorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/tutor_error"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPickEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonSaveSlot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Availability"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="@color/tutor_primary"
        android:textColor="@color/tutor_text_primary"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/errorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>